{
  "name": "SpeedyVideo",
  "version": "0.2.0",
  "manifest_version": 3,
  "description": "video speed controller",
  "permissions": ["storage", "tabs", "scripting", "idle"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "index.html"
  }
}

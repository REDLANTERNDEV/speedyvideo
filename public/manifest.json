{
  "name": "SpeedyVideo - Video Speed Controller",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Control video playback speed on any site with an easy interface.",
  "author": "SpeedyVideo Contributors",
  "homepage_url": "https://github.com/REDLANTERNDEV/speedyvideo",
  "permissions": ["storage", "tabs", "idle"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "SpeedyVideo - Control Video Speed",
    "default_icon": {
      "16": "icons/speedy-16.png",
      "32": "icons/speedy-32.png",
      "48": "icons/speedy-48.png",
      "128": "icons/speedy-128.png"
    }
  },
  "icons": {
    "16": "icons/speedy-16.png",
    "32": "icons/speedy-32.png",
    "48": "icons/speedy-48.png",
    "128": "icons/speedy-128.png"
  }
}
